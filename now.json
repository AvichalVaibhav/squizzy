{
  "version": 2,
  "name": "squizzy",
  "env": {
    "SQUIZZY_WRITE_TOKEN": "@squizzy_write_token"
  },
  "builds": [
    {
      "src": "api/**.js",
      "use": "@now/node"
    },
    {
      "src": "web/package.json",
      "use": "@now/static-build"
    },
    {
      "src": "studio/package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "^/studio/static/(.*)",
      "dest": "/studio/static/$1"
    },
    {
      "src": "^/studio(.*)",
      "dest": "/studio/index.html"
    },
    {
      "src": "^/(js|css)/(.*)",
      "dest": "/web/$1/$2"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/web/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/web/index.html"
    }
  ]
}
